@model IEnumerable<Nabd_AlHayah_Labs.Models.ApplicationUser>

<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <!-- Header -->
            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-md-6 d-flex align-items-center gap-3">
                    <i class="fas fa-users fa-2x text-primary"></i>
                    <h1 class="app-page-title mb-0 fw-bold text-dark">Users</h1>
                </div>

                <div class="col-md-6 text-md-end text-start">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4 py-2 rounded-3 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to Home
                    </a>
                </div>
            </div>

            <hr class="text-muted mb-4" />

            <!-- Stats Cards -->
            <div class="row g-3 mb-5">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100">
                        <h6 class="text-muted mb-1">Total Users</h6>
                        <h3 class="fw-bold text-primary">@Model.Count()</h3>
                        <i class="fa-solid fa-users fa-2x text-primary mt-2"></i>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100">
                        <h6 class="text-muted mb-1">Email Confirmed</h6>
                        <h3 class="fw-bold text-success">@Model.Count(u => u.EmailConfirmed)</h3>
                        <i class="fa-solid fa-envelope-circle-check fa-2x text-success mt-2"></i>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100">
                        <h6 class="text-muted mb-1">Unconfirmed Emails</h6>
                        <h3 class="fw-bold text-warning">@Model.Count(u => !u.EmailConfirmed)</h3>
                        <i class="fa-solid fa-envelope-open-text fa-2x text-warning mt-2"></i>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100">
                        <h6 class="text-muted mb-1">With Phone Number</h6>
                        <h3 class="fw-bold text-info">@Model.Count(u => !string.IsNullOrEmpty(u.PhoneNumber))</h3>
                        <i class="fa-solid fa-phone fa-2x text-info mt-2"></i>
                    </div>
                </div>
            </div>

            <!-- Add Button -->
            <div class="col-auto mb-3">
                <a asp-action="Create" class="btn app-btn-primary">
                    <i class="fa-solid fa-plus me-1"></i> Add User
                </a>
            </div>

            <!-- Table -->
            <div class="app-card app-card-orders-table shadow-sm mb-5">
                @if (Model != null && Model.Any())
                {
                    <div class="app-card-body">
                        <div class="table-responsive">
                            <table id="usersTable" class="table app-table-hover mb-0 text-left display">
                                <thead>
                                    <tr>
                            
                                        <th class="cell">Full Name</th>
                                        <th class="cell">Email</th>
                                        <th class="cell">Phone</th>
                                        <th class="cell">Email Confirmed</th>
                                        <th class="cell">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                         
                                            <td class="cell">@user.FullName</td>
                                            <td class="cell">@user.Email</td>
                                            <td class="cell">@user.PhoneNumber</td>
                                            <td class="cell">
                                                @if (user.EmailConfirmed)
                                                {
                                                    <span class="badge bg-success">Confirmed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Not Confirmed</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn-sm app-btn-warning me-1" title="Edit">
                                                    <i class="fas fa-pen-to-square"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@user.Id" class="btn-sm app-btn-info me-1" title="Details">
                                                    <i class="fa-solid fa-eye text-primary"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn-sm app-btn-danger" title="Delete"
                                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted my-4" style="font-size:1.1rem;">
                        No users found. <br />
                        لا يوجد مستخدمون بعد.
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<style>
    #usersTable th,
    #usersTable td {
        text-align: center !important;
        vertical-align: middle !important;
    }
</style>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable();
        });
    </script>

}
