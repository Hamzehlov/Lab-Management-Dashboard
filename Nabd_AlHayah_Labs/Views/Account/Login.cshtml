@{

	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Life Pulse Laboratories </title>

	<!-- Meta -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<meta name="description" content="Life Pulse Laboratories - Advanced labs for safe and efficient scientific experience.">
	<meta name="author" content="مختبرات نبض الحياة">

	<link rel="shortcut icon" href="favicon.ico">

	<!-- FontAwesome JS-->
	<script src="~/assets/plugins/fontawesome/js/all.min.js"></script>


	<!-- App CSS -->
	<link href="~/assets/css/portal.css" rel="stylesheet" />
</head>

<body class="app app-login p-0">
	<div class="row g-0 app-auth-wrapper">
		<div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
			<div class="d-flex flex-column align-content-end">
				<div class="app-auth-body mx-auto">
					<div class="app-auth-branding mb-4"><a class="app-logo" href="index.html.htm"><img class="logo-icon me-2" src="~/assets/images/2.jpeg" alt="logo"></a></div>
					<h2 class="auth-heading text-center mb-5">Nabd Al Hayah Laboratories</h2>
					<div class="auth-form-container text-start">
						<form class="auth-form login-form" method="post" asp-controller="Account" asp-action="Login">
							@Html.AntiForgeryToken() <!-- مهم لأنك تستخدم [ValidateAntiForgeryToken] -->

							<div class="email mb-3">
								<label class="sr-only" for="signin-email">Email</label>
								<input id="signin-email" name="email" type="email" class="form-control" placeholder="Email address" required>
							</div>

							<div class="password mb-3">
								<label class="sr-only" for="signin-password">Password</label>
								<input id="signin-password" name="password" type="password" class="form-control" placeholder="Password" required>
								<div class="extra mt-3 row justify-content-between">
									<div class="col-6">
										<div class="form-check">
											<input class="form-check-input" type="checkbox" name="rememberMe" id="RememberPassword">
											<label class="form-check-label" for="RememberPassword">
												Remember me
											</label>
										</div>
									</div>
									<div class="col-6 text-end">
										<a href="reset-password.html.htm">Forgot password?</a>
									</div>
								</div>
							</div>

							<div class="text-center">
								<button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Log In</button>
							</div>
						</form>
						</br>
						@if (ViewBag.Error != null)
						{
							<div class="alert alert-danger">
								@ViewBag.Error
							</div>
						}
					</div><!--//auth-form-container-->

				</div><!--//auth-body-->

	<footer class="app-footer">
		<div class="container text-center py-3">
			<small class="copyright">
				Designed with <i class="fas fa-heart" style="color: #fb866a;"></i> by
				<a class="app-link" href="#">Nabd AlHayah Labs</a>
			</small>
		</div>
	</footer><!--//app-footer-->
			</div><!--//flex-column-->
		</div><!--//auth-main-col-->
		<div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
			<div class="auth-background-holder"></div>
			<div class="auth-background-mask"></div>
			<div class="auth-background-overlay p-3 p-lg-5"
				 style="background-image: url('/assets/images/lab.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;">
				<div class="d-flex flex-column align-content-end h-100">
					<div class="h-100"></div>
					<div class="overlay-content p-3 p-lg-4 rounded">
						<!-- النصوص بالإنجليزية -->
						<h5 class="mb-3 overlay-title">Life Pulse Laboratories</h5>
						<div>
							Welcome to our laboratory portal. Explore our advanced labs for a safe and efficient scientific experience.
						</div>
					</div>
				</div>
			</div><!--//auth-background-overlay-->
		</div><!--//auth-background-col-->

	</div><!--//row-->


</body>
</html>

