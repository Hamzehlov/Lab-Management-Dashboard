@model Nabd_AlHayah_Labs.ViewModels.HealthMonitoringViewModel

<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <!-- Header -->
            <div class="d-flex align-items-center justify-content-between mb-4">
                <!-- Back Button -->
                <a asp-action="Index" class="btn app-btn-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to Patients
                </a>

                <!-- Patient Name Centered -->
                <h2 class="text-center flex-grow-1 mb-0 fw-bold" style="font-size: 1.8rem; letter-spacing: 0.5px;">
                    @Model.Patient.FullNameEn (@Model.Patient.FullNameAr)
                </h2>

                <!-- Placeholder to keep spacing right -->
                <div style="width: 120px;"></div>
            </div>

            <!-- Add New Recommendation -->
            <div class="app-card shadow-sm rounded-4 p-3 mb-4 bg-white">
                <h5>Add New Recommendation</h5>
                <form asp-action="AddHealthMonitoring" method="post">
                    <input type="hidden" name="PatientId" value="@Model.Patient.PatientId" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input name="RecommendationTitleEn" class="form-control" placeholder="Recommendation Title (EN)" required />
                        </div>
                        <div class="col-md-6">
                            <input name="RecommendationTitleAr" class="form-control" placeholder="Recommendation Title (AR)" required />
                        </div>
                        <div class="col-12">
                            <textarea name="RecommendationDetailsEn" class="form-control" placeholder="Recommendation Details (EN)" rows="2"></textarea>
                        </div>
                        <div class="col-12">
                            <textarea name="RecommendationDetailsAr" class="form-control" placeholder="Recommendation Details (AR)" rows="2" required></textarea>
                        </div>
                        <div class="col-12">
                            <input name="BasedOnTests" class="form-control" placeholder="Based on Tests (Optional)" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn app-btn-primary"><i class="fas fa-plus me-1"></i> Add Recommendation</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Table of Recommendations -->
            @if (Model.HealthMonitorings != null && Model.HealthMonitorings.Any())
            {
                <div class="app-card app-card-orders-table shadow-sm mb-5">
                    <div class="app-card-body">
                        <div class="table-responsive">
                            <table id="HealthMonitoring" class="table app-table-hover mb-0 text-left">
                                <thead>
                                    <tr>
                                        <th class="cell">#</th>
                                        <th class="cell">Title (EN)</th>
                                        <th class="cell">Title (AR)</th>
                                        <th class="cell">Details (EN)</th>
                                        <th class="cell">Details (AR)</th>
                                        <th class="cell">Based on Tests</th>
                                        <th class="cell">Created At</th>
                                        <th class="cell">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rec in Model.HealthMonitorings)
                                    {
                                        <tr>
                                            <td class="cell">@rec.MonitorId</td>
                                            <td class="cell">@rec.RecommendationTitleEn</td>
                                            <td class="cell">@rec.RecommendationTitleAr</td>
                                            <td class="cell">@rec.RecommendationDetailsEn</td>
                                            <td class="cell">@rec.RecommendationDetailsAr</td>
                                            <td class="cell">@rec.BasedOnTests</td>
                                            <td class="cell">@rec.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                            <td class="cell">
                                                <a asp-action="EditHealthMonitoring" asp-route-monitorId="@rec.MonitorId" class="btn-sm app-btn-warning me-1" title="Edit">
                                                    <i class="fas fa-pen-to-square"></i>
                                                </a>
                                                <a href="javascript:void(0);" class="btn-sm app-btn-danger" onclick="confirmDelete(@rec.MonitorId)" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center text-muted my-4" style="font-size:1.1rem;">
                    No recommendations yet. <br />
                    لا توجد توصيات بعد.
                </div>
            }

        </div><!--//container-xl-->
    </div><!--//app-content-->

    <footer class="app-footer">
        <div class="container text-center py-3">
            <small class="copyright">Designed with <i class="fas fa-heart" style="color: #fb866a;"></i> by Your Team</small>
        </div>
    </footer>

</div><!--//app-wrapper-->

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(monitorId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("DeleteHealthMonitoring", "Patient")?monitorId=' + monitorId;
            }
        });
    }
</script>

<script>
    $(document).ready(function () {
        $('#HealthMonitoring').DataTable();
    });
</script>