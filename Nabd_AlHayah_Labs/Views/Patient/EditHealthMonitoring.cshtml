@model Nabd_AlHayah_Labs.Model.HealthMonitoring

@{
    ViewData["Title"] = "Edit Recommendation";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="app-card shadow-sm rounded-3 overflow-hidden">
                <!-- Header -->
                <div class="app-card-header d-flex justify-content-between align-items-center p-3 border-bottom">
                    <h4 class="mb-0"><i class="fas fa-pen-to-square me-2"></i> Edit Recommendation</h4>
                    <a asp-action="HealthMonitoring" asp-route-patientId="@Model.PatientId" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                </div>

                <!-- Body -->
                <div class="app-card-body p-4">
                    <form asp-action="EditHealthMonitoring" method="post">
                        <input type="hidden" asp-for="MonitorId" />
                        <input type="hidden" asp-for="PatientId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="RecommendationTitleEn" class="form-label">Title (EN)</label>
                                <input asp-for="RecommendationTitleEn" class="form-control" required />
                                <span asp-validation-for="RecommendationTitleEn" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="RecommendationTitleAr" class="form-label">Title (AR)</label>
                                <input asp-for="RecommendationTitleAr" class="form-control" required />
                                <span asp-validation-for="RecommendationTitleAr" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="RecommendationDetailsEn" class="form-label">Details (EN)</label>
                                <textarea asp-for="RecommendationDetailsEn" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="RecommendationDetailsEn" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="RecommendationDetailsAr" class="form-label">Details (AR)</label>
                                <textarea asp-for="RecommendationDetailsAr" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="RecommendationDetailsAr" class="text-danger"></span>
                            </div>

                            <!-- حقل جديد BasedOnTests -->
                            <div class="col-12">
                                <label asp-for="BasedOnTests" class="form-label">Based on Tests (Optional)</label>
                                <input asp-for="BasedOnTests" class="form-control" placeholder="Enter test references or notes" />
                                <span asp-validation-for="BasedOnTests" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Save Changes
                                </button>
                                <a asp-action="HealthMonitoring" asp-route-patientId="@Model.PatientId" class="btn btn-light ms-2">
                                    <i class="fas fa-arrow-left me-1"></i> Cancel
                                </a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
