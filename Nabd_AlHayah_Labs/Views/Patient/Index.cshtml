@model IEnumerable<Nabd_AlHayah_Labs.Model.Patient>

<div class="app-wrapper">



    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <!-- العنوان مع أيقونة -->
                <div class="col-md-6 d-flex align-items-center gap-3">
                    <i class="fas fa-user-injured fa-2x text-primary"></i>
                    <h1 class="app-page-title mb-0 fw-bold text-dark">Patients</h1>
                </div>

                <!-- زر العودة -->
                <div class="col-md-6 text-md-end text-start">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4 py-2 rounded-3 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to Home
                    </a>
                </div>
            </div>

            <hr class="text-muted mb-4">

            <div class="row g-3 mb-5">
                <!-- المرضى بدون Pat_No -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Patients without Pat_No</h6>
                        <h3 class="fw-bold text-primary">@Model.Count(p => p.Pat_No == null)</h3>
                        <i class="fa-solid fa-user-slash fa-2x text-primary mt-2"></i>
                    </div>
                </div>

                <!-- المرضى مع Pat_No -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Patients with Pat_No</h6>
                        <h3 class="fw-bold text-success">@Model.Count(p => p.Pat_No != null)</h3>
                        <i class="fa-solid fa-user-check fa-2x text-success mt-2"></i>
                    </div>
                </div>

                <!-- المواعيد القادمة -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Upcoming Appointments</h6>
                        <h3 class="fw-bold text-success">@Model.Sum(p => p.Appointments.Count(a => a.AppointmentDate >= DateTime.Now))</h3>
                        <i class="fa-solid fa-calendar-day fa-2x text-success mt-2"></i>
                    </div>
                </div>

                <!-- العدد الكلي للمرضى -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Total Patients</h6>
                        <h3 class="fw-bold text-danger">@Model.Count()</h3>
                        <i class="fa-solid fa-users fa-2x text-danger mt-2"></i>
                    </div>
                </div>
            </div>


            <div class="col-auto">
                <a asp-action="Create" class="btn app-btn-primary">
                    <i class="fa-solid fa-plus me-1"></i> Add Patient
                </a>
            </div>

            <div class="app-card app-card-orders-table shadow-sm mb-5">

    @if (Model != null && Model.Any())
    {
        <div class="app-card-body">
                       
            <div class="table-responsive">
                <table id="patientsTable" class="table app-table-hover mb-0 text-left display">
                    <thead>
                        <tr>
                            <th class="cell">Patient ID</th>
                            <th class="cell">Full Name(AR/EN)</th>
                            <th class="cell">File Number</th>
                            <th class="cell">National ID</th>
                            <th class="cell">Phone</th>
                            <th class="cell">Email</th>
                            <th class="cell">Status</th>
                            <th class="cell">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td class="cell">#@patient.PatientId</td>
                                <td class="cell">@patient.FullNameEn / @patient.FullNameAr</td>
                                <td class="cell">@(
                                    patient.Pat_No.HasValue
                                    ? patient.Pat_No.ToString()
                                    : "لم يتم إدخاله / Not entered"
                                )</td>
                                <td class="cell">@patient.NationalId</td>
                                <td class="cell">@patient.Phone</td>
                                <td class="cell">@patient.Email</td>
                                <td class="cell">
                                    @if (patient.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <!-- زر متابعة الحالة -->
                                    <a asp-action="HealthMonitoring" asp-route-patientId="@patient.PatientId" class="btn-sm app-btn-secondary me-1" title="Health Monitoring / متابعة الحالة">
                                        <i class="fas fa-notes-medical"></i>
                                    </a>

                                    <!-- تعديل بيانات المريض -->
                                    <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn-sm app-btn-warning me-1" title="Edit / تعديل">
                                        <i class="fas fa-pen-to-square"></i>
                                    </a>

                                    <!-- المواعيد -->
                                    <a asp-action="Appointments" asp-route-patientId="@patient.PatientId" class="btn-sm app-btn-info me-1" title="Appointments / المواعيد">
                                        <i class="fas fa-calendar-check"></i>
                                    </a>

                                    <!-- التفاصيل -->
                                    <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn-sm app-btn-info me-1" title="Details / التفاصيل">
                                        <i class="fa-solid fa-eye me-2 text-primary"></i>
                                    </a>

                                    @* زر النتائج والفواتير كقائمة منسدلة مع أيقونة فقط *@
                                    @if (patient.Pat_No.HasValue)
                                    {
                                        <div class="btn-group">
                                            <button type="button" class="btn-sm app-btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" title="Results / الفواتير">
                                                <i class="fas fa-file-invoice me-1"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" asp-controller="ResultsAndInvoices" asp-action="Results" asp-route-patientId="@patient.PatientId" title="Results / النتائج">
                                                        <i class="fas fa-vials me-1"></i> Results / النتائج
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-controller="ResultsAndInvoices" asp-action="Invoices" asp-route-patientId="@patient.PatientId" title="Invoices / الفواتير">
                                                        <i class="fas fa-file-invoice-dollar me-1"></i> Invoices / الفواتير
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!--//table-responsive-->
        </div><!--//app-card-body-->

      
    }
    else
    {
        <div class="text-center text-muted my-4" style="font-size:1.1rem;">
            No patients yet. <br />
            لا يوجد مرضى بعد.
        </div>
    }
</div><!--//app-card-->

           

        </div><!--//container-fluid-->
    </div><!--//app-content-->


</div><!--//app-wrapper-->



<script>
    $(document).ready(function () {
        $('#patientsTable').DataTable();
    });
</script>
