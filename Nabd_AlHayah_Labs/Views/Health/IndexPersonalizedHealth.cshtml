@model IEnumerable<Nabd_AlHayah_Labs.Model.PersonalizedHealth>

@{
    ViewData["Title"] = "Personalized Health";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            
            <!-- Header و Search + Add + Back to Home -->
            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-md-6 d-flex align-items-center gap-3">
                    <i class="fas fa-user-md fa-2x text-primary"></i>
                    <h1 class="app-page-title mb-0 fw-bold text-dark">Personalized Health</h1>
                </div>

                <div class="col-md-6 text-md-end text-start">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary px-4 py-2 rounded-3 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to Patients
                    </a>
                </div>
            </div>
            <hr class="text-muted mb-4">


            <!-- إحصائيات -->
            <div class="row g-3 mb-5">
                <!-- Total Records -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Total Records</h6>
                        <h3 class="fw-bold text-primary">@Model.Count()</h3>
                        <i class="fas fa-id-card fa-2x text-primary mt-2"></i>
                    </div>
                </div>

                <!-- Total Tests Linked -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Total Tests Linked</h6>
                        <h3 class="fw-bold text-success">@Model.Count(p => p.Test != null)</h3>
                        <i class="fas fa-vial fa-2x text-success mt-2"></i>
                    </div>
                </div>

                <!-- Active Records -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Active Records</h6>
                        <h3 class="fw-bold text-info">@Model.Count(p => p.IsActive==true)</h3>
                        <i class="fas fa-check-circle fa-2x text-info mt-2"></i>
                    </div>
                </div>

                <!-- Inactive Records -->
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
                        <h6 class="text-muted mb-1">Inactive Records</h6>
                        <h3 class="fw-bold text-danger">@Model.Count( p => p.IsActive != true)</h3>
                        <i class="fas fa-times-circle fa-2x text-danger mt-2"></i>
                    </div>
                </div>
            </div>

            <div class="col-auto">
                <a asp-action="CreatePersonalizedHealth" class="btn app-btn-primary">
                    <i class="fa-solid fa-plus me-1"></i> Add Personalized Health
                </a>
            </div>

            <div class="app-card app-card-orders-table shadow-sm mb-5">
            @if (Model != null && Model.Any())
            {
             
                    <div class="app-card-body">
                        <div class="table-responsive">
                            <table id="patientsTable" class="table app-table-hover mb-0 text-left display">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Card Image</th>
                                        <th>Title (AR/EN)</th>
                                        <th>Test Name</th>
                                        <th>Requirements (AR/EN)</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                @if (item.CardImage != null)
                                                {
                                                    var img = Convert.ToBase64String(item.CardImage);
                                                    <img src="data:image/png;base64,@img" class="rounded-circle" width="50" height="50" />
                                                }
                                            </td>
                                            <td>@item.CardTitleAr / @item.CardTitleEn</td>
                                            <td>
                                                @(item.Test != null
                                                    ? item.Test.TestNameAr + " / " + item.Test.TestNameEn
                                                    : "-")
                                            </td>
                                            <td>@item.RequirementsAr / @item.RequirementsEn</td>
                                            <td>
                                                @if (item.IsActive == true)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="EditPersonalizedHealth" asp-route-id="@item.Id" class="btn-sm app-btn-warning me-1" title="Edit">
                                                    <i class="fas fa-pen-to-square"></i>
                                                </a>
                                                <a class="btn-sm app-btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                

          
            }
            else
            {
                <div class="text-center text-muted py-5 my-5" style="font-size: 1.2rem;">
                    <i class="fas fa-heartbeat fa-3x mb-3 text-secondary"></i><br />
                    No personalized health records yet.<br />
                    <span class="text-secondary">لم يتم إضافة أي سجلات صحية مخصصة بعد.</span>
                    <div class="mt-4">
                        <a asp-action="CreatePersonalizedHealth" class="btn btn-primary">
                            <i class="fa-solid fa-plus me-1"></i> Add Personalized Health
                        </a>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#patientsTable').DataTable();
    });
</script>
