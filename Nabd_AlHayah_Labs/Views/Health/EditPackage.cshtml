@model Nabd_AlHayah_Labs.ViewModels.PackageViewModel
@{
    ViewData["Title"] = "Edit Health Package";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="app-card shadow-lg rounded-4 overflow-hidden">
                <!-- Header -->
                <div class="app-card-header d-flex justify-content-between align-items-center p-3 border-bottom bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-boxes-stacked me-2"></i> Edit Health Package</h4>
                    <a asp-action="IndexPackages" class="btn btn-light btn-sm"><i class="fas fa-arrow-left me-1"></i> Back</a>
                </div>

                <!-- Body -->
                <div class="app-card-body p-4">
                    <form asp-action="EditPackage" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PackageId" />

                        <div class="row g-3">

                            <!-- Package Names -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Package Name (EN)</label>
                                <input asp-for="PackageNameEn" class="form-control" required />
                                <span asp-validation-for="PackageNameEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Package Name (AR)</label>
                                <input asp-for="PackageNameAr" class="form-control" required />
                                <span asp-validation-for="PackageNameAr" class="text-danger"></span>
                            </div>

                            <!-- Descriptions -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Description (EN)</label>
                                <textarea asp-for="DescriptionEn" class="form-control"></textarea>
                                <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Description (AR)</label>
                                <textarea asp-for="DescriptionAr" class="form-control"></textarea>
                                <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                            </div>

                            <!-- Requirements -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Requirements (EN)</label>
                                <input asp-for="RequirementsEn" class="form-control" />
                                <span asp-validation-for="RequirementsEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Requirements (AR)</label>
                                <input asp-for="RequirementsAr" class="form-control" />
                                <span asp-validation-for="RequirementsAr" class="text-danger"></span>
                            </div>

                            <!-- Price & Duration -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Price</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Duration</label>
                                <input asp-for="Duration" class="form-control" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <!-- Active Checkbox -->
                            <div class="col-md-4 d-flex align-items-center mt-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label fw-bold ms-2">Active</label>
                                </div>
                            </div>

                            <!-- Package Image -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Package Image</label>
                                <input asp-for="PackageImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                                <span asp-validation-for="PackageImageFile" class="text-danger"></span>

                                <div class="mt-3 text-center">
                                    @if (Model.PackageImage != null && Model.PackageImage.Length > 0)
                                    {
                                        var base64 = Convert.ToBase64String(Model.PackageImage);
                                        var imgSrc = $"data:image/png;base64,{base64}";
                                        <img id="imagePreview" src="@imgSrc" class="rounded-circle border shadow-sm" style="width:150px; height:150px; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <img id="imagePreview" src="#" class="rounded-circle border shadow-sm" style="width:150px; height:150px; object-fit:cover; display:none;" />
                                    }
                                </div>
                            </div>

                            <!-- Select Tests -->
                            <div class="col-12">
                                <label class="form-label fw-bold">Select Tests</label>
                                <input type="text" id="testSearch" class="form-control mb-2" placeholder="Search tests..." />

                                <div class="row g-2 border rounded p-3" id="testsContainer" style="max-height:300px; overflow-y:auto;">
                                    @foreach (var test in Model.AllTests)
                                    {
                                        var isChecked = Model.SelectedTestIds != null && Model.SelectedTestIds.Contains(test.TestId);
                                        <div class="col-md-4 test-item">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="SelectedTestIds" value="@test.TestId" id="test_@test.TestId" @(isChecked ? "checked" : "") />
                                                <label class="form-check-label" for="test_@test.TestId">
                                                    @test.TestNameAr (@test.TestNameEn)
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <span asp-validation-for="SelectedTestIds" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- Buttons -->
                        <div class="mt-4 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                            <a asp-action="IndexPackages" class="btn btn-light">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var input = event.target;
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('imagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }

        // Search/filter functionality for tests
        document.getElementById('testSearch').addEventListener('input', function () {
            var filter = this.value.toLowerCase();
            var items = document.querySelectorAll('#testsContainer .test-item');
            items.forEach(function (item) {
                var text = item.innerText.toLowerCase();
                item.style.display = text.includes(filter) ? '' : 'none';
            });
        });
    </script>
}
