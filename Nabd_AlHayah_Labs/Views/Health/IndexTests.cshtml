@model IEnumerable<Nabd_AlHayah_Labs.Model.Test>

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

           
            <!-- Header و Search + Add + Back to Home -->
            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-md-6 d-flex align-items-center gap-3">
                    <i class="fas fa-vial fa-2x text-success"></i>
                    <h1 class="app-page-title mb-0 fw-bold text-dark">Tests</h1>
                </div>

                <div class="col-md-6 text-md-end text-start">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4 py-2 rounded-3 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to Patients
                    </a>
                </div>
            </div>
            <hr class="text-muted mb-4">


            <!-- إحصائيات الفحوصات -->
<div class="row g-3 mb-5">
    <!-- Total Tests -->
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
            <h6 class="text-muted mb-1">Total Tests</h6>
            <h3 class="fw-bold text-primary">@Model.Count()</h3>
            <i class="fas fa-vial fa-2x text-primary mt-2"></i>
        </div>
    </div>

    <!-- Tests with Category -->
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
            <h6 class="text-muted mb-1">Tests with Category</h6>
            <h3 class="fw-bold text-success">@Model.Count(t => t.CategoryId != null)</h3>
            <i class="fas fa-tags fa-2x text-success mt-2"></i>
        </div>
    </div>

    <!-- Active Tests -->
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
            <h6 class="text-muted mb-1">Active Tests</h6>
                        <h3 class="fw-bold text-info">@Model.Count(p => p.IsActive == true)</h3>
                        <i class="fas fa-check-circle fa-2x text-info mt-2"></i>
        </div>
    </div>

    <!-- Inactive Tests -->
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center h-100 d-flex flex-column justify-content-between">
            <h6 class="text-muted mb-1">Inactive Tests</h6>
                        <h3 class="fw-bold text-danger">@Model.Count(p => p.IsActive != true)</h3>
            <i class="fas fa-times-circle fa-2x text-danger mt-2"></i>
        </div>
    </div>
</div>

            <div class="col-auto">
                <a asp-action="CreateTest" class="btn app-btn-primary">
                    <i class="fa-solid fa-plus me-1"></i> Add Test
                </a>
            </div>

            <div class="app-card app-card-orders-table shadow-sm mb-5">
    @if (Model != null && Model.Any())
    {
        <div class="app-card-body">
            <div class="table-responsive">
                <table id="patientsTable" class="table app-table-hover mb-0 text-left display">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Name (AR/EN)</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.TestId</td>
                                <td>
                                    @if (test.TestImage != null)
                                    {
                                        var img = Convert.ToBase64String(test.TestImage);
                                        <img src="data:image/png;base64,@img" class="rounded-circle" width="50" height="50" />
                                    }
                                </td>
                                <td>@test.TestNameAr / @test.TestNameEn</td>
                                <td>@test.Category?.CodeDescEn</td>
                                <td>@(test.Price.HasValue ? test.Price.Value.ToString("C") : "-")</td>
                                <td>
                                    @if (test.IsActive == true)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditTest" asp-route-id="@test.TestId" class="btn-sm app-btn-warning me-1" title="Edit Test">
                                        <i class="fas fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn-sm app-btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!--//table-responsive-->
        </div><!--//app-card-body-->

       
    }
    else
    {
        <div class="text-center text-muted my-4" style="font-size:1.1rem;">
            No tests found.<br />
            لا يوجد فحوصات بعد.
        </div>
    }
</div><!--//app-card-->

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#patientsTable').DataTable();
    });
</script>
