@model Nabd_AlHayah_Labs.ViewModels.PersonalizedHealthViewModel
@{
    ViewData["Title"] = "Add Personalized Health Card";
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="app-card shadow-lg rounded-4 overflow-hidden">
                <!-- Header -->
                <div class="app-card-header d-flex justify-content-between align-items-center p-3 border-bottom bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-id-card me-2"></i> Add Personalized Health Card</h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                </div>

                <!-- Body -->
                <div class="app-card-body p-4">
                    <form asp-action="CreatePersonalizedHealth" method="post" enctype="multipart/form-data">
                        <div class="row g-3">

                            <!-- Card Titles -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Card Title (EN)</label>
                                <input asp-for="CardTitleEn" class="form-control" />
                                <span asp-validation-for="CardTitleEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Card Title (AR)</label>
                                <input asp-for="CardTitleAr" class="form-control" />
                                <span asp-validation-for="CardTitleAr" class="text-danger"></span>
                            </div>

                            <!-- Card Snippets -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Card Snippet (EN)</label>
                                <textarea asp-for="CardSnippetEn" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="CardSnippetEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Card Snippet (AR)</label>
                                <textarea asp-for="CardSnippetAr" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="CardSnippetAr" class="text-danger"></span>
                            </div>

                            <!-- Test Selection -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Select Test</label>
                                <select asp-for="TestId" asp-items="@(new SelectList(Model.AllTests, "TestId", "TestNameAr"))" class="form-select">
                                    <option value="">-- Select Test --</option>
                                </select>
                                <span asp-validation-for="TestId" class="text-danger"></span>
                            </div>

                            <!-- Test Names -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Test Name (EN)</label>
                                <input asp-for="TestNameEn" class="form-control" />
                                <span asp-validation-for="TestNameEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Test Name (AR)</label>
                                <input asp-for="TestNameAr" class="form-control" />
                                <span asp-validation-for="TestNameAr" class="text-danger"></span>
                            </div>

                            <!-- Descriptions -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Description (EN)</label>
                                <textarea asp-for="DescriptionEn" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Description (AR)</label>
                                <textarea asp-for="DescriptionAr" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                            </div>

                            <!-- Requirements -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Requirements (EN)</label>
                                <input asp-for="RequirementsEn" class="form-control" />
                                <span asp-validation-for="RequirementsEn" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Requirements (AR)</label>
                                <input asp-for="RequirementsAr" class="form-control" />
                                <span asp-validation-for="RequirementsAr" class="text-danger"></span>
                            </div>

                            <!-- Active Checkbox -->
                            <div class="col-md-6 d-flex align-items-center mt-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label fw-bold ms-2">Active</label>
                                </div>
                            </div>

                            <!-- Images -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Card Image</label>
                                <input asp-for="CardImageFile" type="file" class="form-control" accept="image/*" onchange="previewCardImage(event)" />
                                <div class="mt-2 text-center">
                                    <img id="cardImagePreview" src="#" class="rounded shadow-sm border" style="width:150px; height:150px; object-fit:cover; display:none;" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Test Image</label>
                                <input asp-for="TestImageFile" type="file" class="form-control" accept="image/*" onchange="previewTestImage(event)" />
                                <div class="mt-2 text-center">
                                    <img id="testImagePreview" src="#" class="rounded shadow-sm border" style="width:150px; height:150px; object-fit:cover; display:none;" />
                                </div>
                            </div>

                        </div>

                        <!-- Buttons -->
                        <div class="mt-4 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2"><i class="fas fa-save me-1"></i> Save</button>
                            <a asp-action="Index" class="btn btn-light"><i class="fas fa-arrow-left me-1"></i> Cancel</a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewCardImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('cardImagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function previewTestImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('testImagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
