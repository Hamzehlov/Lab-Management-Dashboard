@model IEnumerable<Nabd_AlHayah_Labs.Model.NewsEvent>


@{
    var totalCount = Model.Count();
    var upcomingCount = Model.Count(e => e.EventDate != null && e.EventDate > DateTime.Now);
    var pastCount = Model.Count(e => e.EventDate != null && e.EventDate <= DateTime.Now);
    var lastUpdate = Model.OrderByDescending(e => e.EventDate).FirstOrDefault()?.EventDate?.ToShortDateString() ?? "—";
}

<div class="app-wrapper">








    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-auto">
                    <h1 class="app-page-title mb-0">News & Events</h1>
                </div>
                <div class="col-auto">
                    <div class="page-utilities">
                        <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                            <div class="col-auto">
                                <form class="docs-search-form row gx-1 align-items-center">
                                    <div class="col-auto">
                                        <input type="text" id="search-docs" name="searchdocs" class="form-control search-docs" placeholder="Search">
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn app-btn-secondary">Search</button>
                                    </div>
                                </form>
                            </div><!--//col-->

                            <div class="col-auto">
                                <select class="form-select w-auto">
                                    <option selected="" value="option-1">All</option>
                                    <option value="option-2">Text file</option>
                                    <option value="option-3">Image</option>
                                    <option value="option-4">Spreadsheet</option>
                                    <option value="option-5">Presentation</option>
                                    <option value="option-6">Zip file</option>
                                </select>
                            </div>

                            <div class="col-auto">
                                <a class="btn app-btn-primary" asp-action="CreateNews">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-upload me-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"></path>
                                        <path fill-rule="evenodd" d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"></path>
                                    </svg>Add New
                                </a>
                            </div>
                        </div><!--//row-->
                    </div><!--//page-utilities-->
                </div><!--//col-auto-->
            </div><!--//row-->

            <div class="row g-3 mb-5">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center">
                        <h6 class="text-muted mb-1">Total Items</h6>
                        <h3 class="fw-bold text-primary">@totalCount</h3>
                        <i class="fa-solid fa-layer-group fa-2x text-primary mt-2"></i>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center">
                        <h6 class="text-muted mb-1">Upcoming Events</h6>
                        <h3 class="fw-bold text-success">@upcomingCount</h3>
                        <i class="fa-solid fa-calendar-day fa-2x text-success mt-2"></i>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center">
                        <h6 class="text-muted mb-1">Past Events</h6>
                        <h3 class="fw-bold text-danger">@pastCount</h3>
                        <i class="fa-solid fa-clock-rotate-left fa-2x text-danger mt-2"></i>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 p-3 bg-white text-center">
                        <h6 class="text-muted mb-1">Last Update</h6>
                        <h4 class="fw-semibold text-secondary">@lastUpdate</h4>
                        <i class="fa-solid fa-rotate fa-2x text-secondary mt-2"></i>
                    </div>
                </div>
            </div>



            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-6 col-xl-4 col-xxl-3">
                        <div class="app-card app-card-doc shadow-sm h-100">
                            <div class="app-card-thumb-holder p-3">
                                <div class="app-card-thumb text-center">
                                    @if (item.Image != null && item.Image.Length > 0)
                                    {
                                        var base64 = Convert.ToBase64String(item.Image);
                                        var imgSrc = $"data:image/png;base64,{base64}";
                                        <img class="thumb-image rounded" src="@imgSrc" alt="@item.TitleEn" style="width:100%;height:220px;object-fit:cover;">
                                    }
                                    else if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img class="thumb-image rounded" src="@item.ImageUrl" alt="@item.TitleEn" style="width:100%;height:220px;object-fit:cover;">
                                    }
                                    else
                                    {
                                        <img class="thumb-image rounded" src="~/images/no-image.png" alt="No Image" style="width:100%;height:220px;object-fit:cover;">
                                    }
                                </div>
                                <a class="app-card-link-mask" asp-action="Details" asp-route-id="@item.Id"></a>
                            </div>

                            <div class="app-card-body p-3 has-card-actions">
                                <h4 class="app-doc-title truncate mb-1">@item.TitleEn</h4>
                                <div class="app-doc-meta mb-2">
                                    <ul class="list-unstyled mb-0 small">
                                        <li><span class="text-muted">Date:</span> @item.EventDate?.ToShortDateString()</li>
                                    </ul>
                                </div>

                                <div class="app-card-actions">
                                    <div class="dropdown">
                                        <div class="dropdown-toggle no-toggle-arrow" data-bs-toggle="dropdown" aria-expanded="false">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-three-dots-vertical" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"></path>
                                            </svg>
                                        </div>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" asp-action="DetailsNews" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-eye me-2 text-primary"></i> View
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="EditNews" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-pen-to-square me-2 text-warning"></i> Edit
                                                </a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);" class="dropdown-item text-danger delete-news" data-id="@item.Id">
                                                    <i class="fa-solid fa-trash me-2"></i> Delete
                                                </a>

                                            </li>
                                        </ul>
                                    </div><!--//dropdown-->
                                </div><!--//app-card-actions-->
                            </div><!--//app-card-body-->
                        </div><!--//app-card-->
                    </div>
                }
            </div><!--//row-->

            <nav class="app-pagination mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav><!--//app-pagination-->
        </div><!--//container-fluid-->
    </div><!--//app-content-->


</div><!--//app-wrapper-->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.delete-news').forEach(btn => {
            btn.addEventListener('click', function () {
                const newsId = this.getAttribute('data-id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Create a form dynamically
                        const form = document.createElement('form');
                        form.method = 'post';
                        form.action = '@Url.Action("DeleteConfirmed", "Home")';

                        // Add anti-forgery token
                        const token = document.querySelector('input[name="__RequestVerificationToken"]');
                        if (token) {
                            const inputToken = document.createElement('input');
                            inputToken.type = 'hidden';
                            inputToken.name = '__RequestVerificationToken';
                            inputToken.value = token.value;
                            form.appendChild(inputToken);
                        }

                        // Add news Id
                        const inputId = document.createElement('input');
                        inputId.type = 'hidden';
                        inputId.name = 'id';
                        inputId.value = newsId;
                        form.appendChild(inputId);

                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });
    </script>
}



