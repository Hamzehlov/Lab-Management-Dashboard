@model Nabd_AlHayah_Labs.Model.NewsEvent
@{
    ViewData["Title"] = "تفاصيل الخبر / الحدث";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-newspaper me-2"></i> تفاصيل الخبر / الحدث
            </h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left"></i> رجوع
            </a>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 250px; object-fit: cover;" alt="News Image" />
                    }
                    else
                    {
                        <div class="text-muted">لا توجد صورة</div>
                    }
                </div>

                <div class="col-md-8">
                    <h5 class="fw-bold text-success mb-2">العنوان (عربي):</h5>
                    <p class="text-dark">@Model.TitleAr</p>

                    <h5 class="fw-bold text-success mb-2">العنوان (إنجليزي):</h5>
                    <p class="text-dark">@Model.TitleEn</p>

                    <h5 class="fw-bold text-success mb-2">الوصف (عربي):</h5>
                    <p>@Model.DescriptionAr</p>

                    <h5 class="fw-bold text-success mb-2">الوصف (إنجليزي):</h5>
                    <p>@Model.DescriptionEn</p>

                    <h5 class="fw-bold text-success mb-2">تاريخ الحدث:</h5>
                    <p>@Model.EventDate?.ToString("yyyy-MM-dd")</p>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> تعديل
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> حذف
            </a>
        </div>
    </div>
</div>
